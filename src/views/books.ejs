<%- include("header") -%>

<h1>Board Test</h1>

<ul>

  <div class="table-responsive-sm">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>번호</th>
          <th>제목</th>
          <th>작성자</th>
          <th>작성일</th>
 
          <th class="d-print-none">
            <a class="btn btn-sm btn-success" href="/create">Add</a>
          </th>
        </tr>
      </thead>

      <tbody>
        <% for (const book of model) { %>
          <tr>
            <td><%= book.idx %></td>
            <td><%= book.Title %></td>
            <td><%= book.Author %></td>
            <td><%= book.DateTime %></td>
            

            <td class="d-print-none">
              <a class="btn btn-sm btn-warning" href="/edit/<%= book.Book_ID %>">Edit</a>
              <a class="btn btn-sm btn-danger" href="/delete/<%= book.Book_ID %>">Delete</a>
              <a class="btn btn-sm" href="/more/<%= book.Book_ID %>">More</a>
            </td>
          </tr>
        <% } %>

      </tbody>
    </table>
  </div>
</ul>

<%- include("footer") -%>
